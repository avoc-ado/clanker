    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.12.0",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
