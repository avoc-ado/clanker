{
  "name": "clanker-cli",
  "version": "0.1.0",
  "description": "Glitchcore agent harness with planner, slaves, judge, and TUI dashboard.",
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "license": "MIT",
  "bin": {
    "clanker": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/avoc-ado/clanker.git"
  },
  "homepage": "https://github.com/avoc-ado/clanker",
  "keywords": [
    "agents",
    "codex",
    "tui",
    "tmux",
    "automation"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "yarn build && yarn node dist/cli.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest --coverage",
    "test:it:stub": "CLANKER_IT_MODE=stub yarn build && NODE_OPTIONS=--experimental-vm-modules yarn jest --config jest.it.config.cjs",
    "test:it:real": "CLANKER_IT_MODE=real yarn build && NODE_OPTIONS=--experimental-vm-modules yarn jest --config jest.it.config.cjs",
    "test:it": "yarn test:it:stub",
    "verify": "yarn format:write && yarn typecheck && yarn test && yarn test:it",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepack": "yarn build"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chokidar": "^3.6.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.12.0",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
